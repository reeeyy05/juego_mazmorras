<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<GridPane hgap="0" vgap="0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1"
          fx:controller="com.alejandro.alberto.controladores.controladorJuego"
          onKeyPressed="#manejarTeclas">

    <!-- Contenedor principal -->
    <StackPane GridPane.columnIndex="0" GridPane.rowIndex="0">
        <!-- GridPane para el mapa -->
        <GridPane fx:id="mapaGrid" hgap="0" vgap="0" prefWidth="450.0" prefHeight="450.0">
            <columnConstraints>
                <!-- 15 columnas de 30px -->
                <ColumnConstraints prefWidth="30.0" />
                <ColumnConstraints prefWidth="30.0" />
                <ColumnConstraints prefWidth="30.0" />
                <ColumnConstraints prefWidth="30.0" />
                <ColumnConstraints prefWidth="30.0" />
                <ColumnConstraints prefWidth="30.0" />
                <ColumnConstraints prefWidth="30.0" />
                <ColumnConstraints prefWidth="30.0" />
                <ColumnConstraints prefWidth="30.0" />
                <ColumnConstraints prefWidth="30.0" />
                <ColumnConstraints prefWidth="30.0" />
                <ColumnConstraints prefWidth="30.0" />
                <ColumnConstraints prefWidth="30.0" />
                <ColumnConstraints prefWidth="30.0" />
                <ColumnConstraints prefWidth="30.0" />
            </columnConstraints>
            <rowConstraints>
                <!-- 15 filas de 30px -->
                <RowConstraints prefHeight="30.0" />
                <RowConstraints prefHeight="30.0" />
                <RowConstraints prefHeight="30.0" />
                <RowConstraints prefHeight="30.0" />
                <RowConstraints prefHeight="30.0" />
                <RowConstraints prefHeight="30.0" />
                <RowConstraints prefHeight="30.0" />
                <RowConstraints prefHeight="30.0" />
                <RowConstraints prefHeight="30.0" />
                <RowConstraints prefHeight="30.0" />
                <RowConstraints prefHeight="30.0" />
                <RowConstraints prefHeight="30.0" />
                <RowConstraints prefHeight="30.0" />
                <RowConstraints prefHeight="30.0" />
                <RowConstraints prefHeight="30.0" />
            </rowConstraints>
        </GridPane>
    </StackPane>

    <!-- Panel lateral para estadísticas -->
    <VBox alignment="CENTER_RIGHT" spacing="10" style="-fx-background-color: #333333; -fx-padding: 10;" prefWidth="200"
          GridPane.columnIndex="1" GridPane.rowIndex="0">
        <Label text="ESTADÍSTICAS" style="-fx-font-size: 18px; -fx-text-fill: white;" />
        <Label fx:id="nombreLabel" text="Nombre: " style="-fx-text-fill: white;" />
        <Label fx:id="saludLabel" text="Salud: " style="-fx-text-fill: white;" />
        <Label fx:id="fuerzaLabel" text="Fuerza: " style="-fx-text-fill: white;" />
        <Label fx:id="defensaLabel" text="Defensa: " style="-fx-text-fill: white;" />
    </VBox>

    <!-- Configuración de columnas y filas principales -->
    <columnConstraints>
        <ColumnConstraints prefWidth="450" />
        <ColumnConstraints prefWidth="250" />
    </columnConstraints>
    <rowConstraints>
        <RowConstraints prefHeight="450" />
    </rowConstraints>
</GridPane>
