<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>

<!-- Vista para la creación del personaje -->
<VBox xmlns:fx="http://javafx.com/fxml" fx:controller="com.alejandro.alberto.controladores.controladorCreacionPersonaje"
      alignment="CENTER" spacing="20" style="-fx-padding: 20;">
    
    <!-- Título -->
    <Label text="Crea tu personaje" style="-fx-font-size: 24px;"/>

    <!-- Campo para escribir el nombre -->
    <TextField fx:id="campoNombre" promptText="Escribe tu nombre"/>

    <!-- Botón para aceptar y guardar el nombre -->
    <Button fx:id="botonAceptar" text="Aceptar" onAction="#manejarAceptar"/>

</VBox>